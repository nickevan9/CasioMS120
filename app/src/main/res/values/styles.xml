<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonNumber" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_number</item>
        <item name="android:textSize">@dimen/button_text_size_number</item>
        <item name="android:fontFamily">@font/digital</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonAC" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_ac</item>
        <item name="android:textSize">@dimen/button_text_size_ac</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonAction" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_action</item>
        <item name="android:textSize">@dimen/button_text_size_ac</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonMoreAction" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_action</item>
        <item name="android:textSize">@dimen/button_text_action</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/holo_orange_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonMore" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_more</item>
        <item name="android:textSize">@dimen/button_text_action</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
